@model List<Enfermedad>
@{
    ViewData["Title"] = "Administrar Enfermedades en Apicultura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Administrar Enfermedades en Apicultura</h1>

<div>
    <a class="button" asp-controller="Home" asp-action="Index">Volver al Home</a>
</div>
<div>
    <a class="button" asp-action="EnfermedadCrear">Nueva Enfermedad</a>
</div>
<div>
    <a class="button" asp-action="EnfermedadResumen">Informacion Enfermedades</a>
</div>

<div>
    <h6>Listado de Enfermedades</h6>
</div>
<div class="row justify-content-evenly mt-3">
    <div style="overflow:auto;">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>                    
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Nombre
                        </td>                        
                        <td>
                            @item.Descripcion
                        </td>
                        <td>
                            <a asp-action="EnfermedadEditar" asp-route-id="@item.Id">Editar</a>
                            <a onclick="return confirm('¿Eliminar Enfermedad?')" asp-action="EnfermedadBorrar" asp-route-id="@item.Id">Borrar</a>                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
