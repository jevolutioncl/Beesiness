@model InspeccionCrearViewModel
@{
}

<div>
    <h2>Editando Inspeccion: <strong>@Model.Id</strong> Fecha creacion: <strong>@Model.Fecha</strong></h2>
</div>

<div>
    <form class="row justify-content-evenly" asp-action="InspeccionEditar" method="post">
        <div class="col-md-6">
            <div class="form-group mt-3">
                <input asp-for="Id" class="form-control" placeholder=@Model.Id readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="Fecha" class="form-control" placeholder=@Model.Fecha />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="Observaciones" class="form-control" placeholder=@Model.Observaciones />
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="IdUsuario">Inspector</label>
                <select asp-for="IdUsuario" asp-items="Model.UsuariosDisponibles" class="form-control">
                    <option value=@Model.IdUsuario></option>
                </select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar los Cambios" class="btn btn-outline-success col-12" />
            </div>
        </div>
    </form>
</div>

