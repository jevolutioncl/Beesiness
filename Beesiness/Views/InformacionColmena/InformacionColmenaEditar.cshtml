@model InformacionColmena
@{
}

<div>
    <h2>Editando la entrada de Informacion: <strong>@Model.Id</strong> Para la Colmena: <strong>@Model.IdColmena</strong></h2>
</div>

<div>
    <form class="row justify-content-evenly" asp-action="InformacionColmenaEditar" method="post">
        <div class="col-md-6">
            <div class="form-group mt-3">
                <label asp-for="Id">Id Entrada:</label>
                <input asp-for="Id" class="form-control" placeholder=@Model.Id readonly />                
            </div>
            <div class="form-group mt-3">
                <label asp-for="IdColmena">Id Colmena:</label>
                <input asp-for="IdColmena" class="form-control" placeholder=@Model.IdColmena readonly />               
            </div>
            <div class="form-group mt-3">
                <label asp-for="IdInspeccion">Id Inspeccion:</label>
                <input asp-for="IdInspeccion" class="form-control" placeholder=@Model.IdInspeccion readonly />
            </div>
            <div class="form-group mt-3">
                <input asp-for="UbicacionColmena" class="form-control" placeholder=@Model.UbicacionColmena />
                <span asp-validation-for="UbicacionColmena" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="TiempoVida" class="form-control" placeholder=@Model.TiempoVida />
                <span asp-validation-for="TiempoVida" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="EstadoSalud" class="form-control" placeholder=@Model.EstadoSalud />
                <span asp-validation-for="EstadoSalud" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar los Cambios" class="btn btn-outline-success col-12" />
            </div>
        </div>
    </form>
</div>


