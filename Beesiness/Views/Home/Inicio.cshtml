@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bienvenido a Beesync</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/chat.css" rel="stylesheet" />
    <style>
        #customInfobox {
            position: absolute;
            display: none;
            background: #1f2937; 
            color: #ffffff;
            border: 1px solid #eab308; 
            padding: 10px;
            border-radius: 5px;
            z-index: 1000;
        }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center py-5 px-3">
    <div class="container d-flex flex-column align-items-center">
        <div class="text-center mb-4">
            <img src="/css/BEESYNC.svg" alt="Gold Neon SVG" class="img-fluid shadow-lg rounded border border-warning p-4" style="max-width: 300px; background-color: #1f2937;">
        </div>

        <div class="text-center mb-5">
            <h1 class="fw-bold text-white">Bienvenido a Beesync</h1>
            <h2 class="text-muted">Explora nuestras funcionalidades</h2>
        </div>

        <div class="row g-4 w-100">
            <div class="col-md-6">
                <div class="card card-custom p-4 shadow-lg h-100 position-relative">
                    <div class="d-flex align-items-center mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="me-2" style="width: 24px; height: 24px; color: #eab308;">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498 4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 0 0-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0Z" />
                        </svg>
                        <h3 class="fw-bold text-white mb-0">Mapa Interactivo</h3>
                    </div>
                    <div id="myMap" class="w-100" style="height: 300px; background-color: #111827; border: 1px solid #1f2937;"></div>
                    <select id="filterTipo" class="form-select mt-3">
                        <option value="Todos">Todos</option>
                        <option value="Langstroth">Langstroth</option>
                        <option value="Dadant">Dadant</option>
                        <option value="Warré">Warré</option>
                    </select>
                    <div id="colmenaList" class="mt-3 p-2 border border-gray-700 rounded" style="background-color: #1f2937; color: #9ca3af; height: 150px; overflow-y: auto;">
                    </div>
                    <div id="customInfobox"></div>
                    <p class="text-muted mt-3">Explora el mapa interactivo y localiza las colmenas.</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card card-custom p-4 shadow-lg h-100 d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="me-2" style="width: 24px; height: 24px; color: #eab308;">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 20.25c4.97 0 9-3.694 9-8.25s-4.03-8.25-9-8.25S3 7.444 3 12c0 2.104.859 4.023 2.273 5.48.432.447.74 1.04.586 1.641a4.483 4.483 0 0 1-.923 1.785A5.969 5.969 0 0 0 6 21c1.282 0 2.47-.402 3.445-1.087.81.22 1.668.337 2.555.337Z" />
                        </svg>
                        <h3 class="fw-bold text-white mb-0">Inteligencia Artificial</h3>
                    </div>
                    <p class="text-muted">¡Prueba nuestra IA sobre Apicultura!</p>
                    <div class="chat-container" id="chatContainer">
                        <div class="chat-message ai">
                            BeeAI está lista para responder, ¡haz una consulta sobre Apicultura!
                        </div>
                    </div>

                    <div class="chat-input-container">
                        <input type="text" class="form-control" id="userInput" placeholder="Escribe tu mensaje...">
                        <button class="btn btn-warning text-dark" onclick="sendMessage()">Enviar</button>
                        <button class="btn btn-danger text-white" onclick="nuevoChat()">Nuevo Chat</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-5 text-center">
            <a href="@Url.Action("Login", "Auth")" class="btn btn-primary px-4 py-2">Ingresar al sistema</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://www.bing.com/api/maps/mapcontrol?key=AmrnF-1-dvaNYDUkUuogYW8SOvy2cut1Xdxs4EzsahlVv8HrT_MvGx0HPKP8dOlZ&callback=loadMapScenario" async defer></script>
    <script src="/js/MapaInicio.js"></script>
    <script src="/js/simulacionIA.js"></script>
</body>
</html>
