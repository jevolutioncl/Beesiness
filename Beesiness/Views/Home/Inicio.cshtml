@{
    ViewData["Title"] = "Home Page";
    string userName = ViewData["UserName"] as string;
    var netVersion = Environment.Version;
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bienvenido a Beesync</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="/css/Inicio.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="p-3 mb-2 bg-dark">
    <div class="container full-height">
        <div class="svg-container text-center">
            <img src="/css/BEESYNC.svg" alt="Gold Neon SVG" class="reflection-svg">
        </div>
        <div class="container-bodycentral">
            <h1 class="tracking-in-expand text-center text-white mb-4">¡Bienvenidos a Beesync!</h1>
            <div class="row w-100">
                <h2 class="text-center text-white mb-4">Explora nuestras funcionalidades</h2>
                <div class="col-md-6 text-center div-izquierda">
                    <div class="card-custom p-4" style="position: relative;">
                        <h3 class="text-white">Mapa interactivo</h3>
                        <div id="myMap" style="width:100%;height:400px;"></div>
                    </div>
                </div>
                <div class="col-md-6 text-center div-derecha">
                    <div class="card-custom p-4">
                        <h3 class="text-white">Inteligencia Artificial</h3>
                        <p class="text-white">¡Prueba nuestra IA sobre Apicultura!</p>
                    </div>
                </div>
            </div>
            <div class="row w-100 mt-4">
                <div class="col text-center">
                    <a href="@Url.Action("LoginIn", "Auth")" class="btn btn-primary btn-ingresar">Ingresar al sistema</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script type='text/javascript' src='https://www.bing.com/api/maps/mapcontrol?key=AmrnF-1-dvaNYDUkUuogYW8SOvy2cut1Xdxs4EzsahlVv8HrT_MvGx0HPKP8dOlZ&callback=loadMapScenario' async defer></script>
    <script src="/js/mapaInicio.js"></script>
</body>

</html>