@{
    ViewData["Title"] = "Dashboard";
    string userName = ViewData["UserName"] as string;
    var netVersion = Environment.Version;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard - Beesiness</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- Custom Styles -->
    @section CustomStyles {
        <link href="/css/index.css" rel="stylesheet" />
        <link href="/css/tareadash.css" rel="stylesheet" />
    }

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <div class="dashboard-container">
        <!-- Header -->
        <header class="dashboard-header">
            <h1>¡Bienvenido, @(string.IsNullOrEmpty(userName) ? "Usuario" : userName)!</h1>
            <p>Panel principal de Beesiness. Gestiona tus colmenas y consulta las estadísticas clave.</p>
        </header>

        <!-- Main Content -->
        <main class="dashboard-main">
            <!-- Dashboard Cards -->
            <div class="dashboard-cards">
                <div class="card">
                    <i class="fas fa-archive"></i>
                    <div>
                        <h2>Colmenas</h2>
                        <p id="colmenas-activas"></p>
                    </div>
                </div>
                <div class="card">
                    <i class="fas fa-chart-line"></i>
                    <div>
                        <h2>Producción</h2>
                        <p id="produccion-total"></p>
                    </div>
                </div>
                <div class="card">
                    <i class="fas fa-exclamation-triangle"></i>
                    <div>
                        <h2>Alertas</h2>
                        <p id="alertas-total"></p>
                    </div>
                </div>
            </div>

            <section class="dashboard-graphs">
                <div class="graph-card">
                    <h3>Producción mensual</h3>
                    <canvas id="productionChart"></canvas>
                </div>
                <div class="graph-card">
                    <h3>Tipos de Colmenas</h3>
                    <canvas id="colmenaTypesChart"></canvas>
                </div>
                <div class="graph-card">
                    <h3>Alertas Recientes</h3>
                    <canvas id="alertsChart"></canvas>
                </div>
            </section>

            <!--Tareas-->
            <section class="dashboard-cards">
                <div id="panel-tareas">
                    <h2>Tareas Pendientes</h2>
                    <div id="lista-tareas">
                        <!-- Aquí se mostrarán las tareas -->
                    </div>
                </div>
                <div id="detalle-tarea">
                    <h2>Detalle de la Tarea</h2>
                    <p id="titulo-tarea"></p>
                    <p id="descripcion-tarea"></p>
                    <button id="boton-tarea"></button>
                </div>
            </section>

        </main>
    </div>

    <!-- Custom Scripts -->
    @section Scripts {
        <script src="/js/dashboard.js"></script>        
    }
</body>

</html>
