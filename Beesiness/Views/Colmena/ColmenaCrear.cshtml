@model Colmena
@{
}

<div>
    <h2>Crear Colmena</h2>
</div>
<div>
    <form class="row justify-content-evenly" asp-action="ColmenaCrear">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <input asp-for="FechaIngreso" class="form-control" placeholder="Fecha de Ingreso Colmena" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="TipoColmena" class="form-control" placeholder="Tipo de Colmena" />
                <span asp-validation-for="TipoColmena" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="Descripcion" class="form-control" placeholder="Descripcion" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Crear Colmena" class="btn btn-outline-success col-12" />
            </div>
        </div>
    </form>
</div>