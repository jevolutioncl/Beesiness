@model Colmena
@{
}

<div>
        <h2>Editando Colmena: <strong>@Model.Id</strong> Fecha creacion: <strong>@Model.FechaIngreso</strong></h2>
</div>

<div>
    <form class="row justify-content-evenly" asp-action="ColmenaEditar" method="post">
        <div class="col-md-6">
            <div class="form-group mt-3">
                <input asp-for="Id" class="form-control" placeholder=@Model.Id readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="FechaIngreso" class="form-control" placeholder=@Model.FechaIngreso />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="TipoColmena" class="form-control" placeholder=@Model.TipoColmena />
                <span asp-validation-for="TipoColmena" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="Descripcion" class="form-control" placeholder=@Model.Descripcion />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar los Cambios" class="btn btn-outline-success col-12" />
            </div>
        </div>        
    </form>
</div>

