@model Rol
@{
}

<div>
    <h2>Editando Rol: <strong>@Model.Id</strong> Nombre: <strong>@Model.Nombre</strong></h2>
</div>

<div>
    <form class="row justify-content-evenly" asp-action="RolEditar" method="post">
        <div class="col-md-6">
            <div class="form-group mt-3">
                <input asp-for="Id" class="form-control" placeholder=@Model.Id readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="Nombre" class="form-control" placeholder=@Model.Nombre />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="Descripcion" class="form-control" placeholder=@Model.Descripcion />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar los Cambios" class="btn btn-outline-success col-12" />
            </div>
        </div>
    </form>
</div>
