@{
    ViewData["Title"] = "Estado del Sistema";
}

<link href="/css/estado-sistema.css" rel="stylesheet" />

<div class="estado-sistema-container">
    <h2 class="estado-sistema-titulo">Estado del Sistema</h2>

    <!-- Componentes del estado -->
    <div class="estado-componente">
        <span class="estado-titulo">Frontend:</span>
        <span id="textoEstadoFrontend" class="estado-texto conectado">Conectado</span>
    </div>

    <div class="estado-componente">
        <span class="estado-titulo">Backend:</span>
        <span id="textoEstadoBackend" class="estado-texto conectado">Conectado</span>
    </div>

    <div class="estado-componente">
        <span class="estado-titulo">Base de datos:</span>
        <span id="textoEstadoDatabase" class="estado-texto conectado">Conectado</span>
    </div>

    <div class="estado-componente">
        <span class="estado-titulo">Arduino:</span>
        <span id="textoEstadoArduino" class="estado-texto desconectado">Desconectado</span>
    </div>

    <!-- Botones -->
    <div class="estado-botones">
        <button id="verificarEstadoSistema" class="boton-verificar">
            <i class="fa-solid fa-refresh"></i> Verificar Estado
        </button>
        <a asp-controller="Arduino" asp-action="EstadoArduino" class="btn-verificar-arduino">
            <i class="fa-solid fa-microchip"></i> Verificar Arduino
        </a>
    </div>
</div>


@section Scripts {
    <script src="/js/estado-sistema.js"></script>
}
