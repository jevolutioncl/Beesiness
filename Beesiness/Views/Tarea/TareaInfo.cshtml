@model TareaViewModel
@{
    ViewData["Title"] = "Informnacion Tarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2>Tarea: <strong>@Model.Id</strong> Nombre: <strong>@Model.Nombre</strong></h2>
</div>
<div>
    <a class="button" asp-controller="Home" asp-action="Index">Volver al Home</a>
</div>
<div>
    <a class="button" asp-action="TareaIndex">Ver Tareas</a>
</div>

<div class="container">
    <div class="row justify-content-evenly">
        <div class="col-md-6">
            <div class="form-group mt-3">
                <h6>Id: @Model.Id</h6>                
            </div>
            <div class="form-group mt-3">
                <h6>Nombre: @Model.Nombre</h6>
            </div>
            <div class="form-group mt-3">
                <h6>Descripción: </h6>
                <r>@Model.Descripcion</r>
            </div>
            <div class="form-group mt-3">
                <h6>Fecha Registro: @Model.FechaRegistro</h6>
            </div>            
            <div class="form-group mt-3">
                <h6>Fecha Agendada: @Model.FechaRealizacion</h6>
            </div>
            <div class="form-group mt-3">
                <h6>Status: @Model.Status</h6>
            </div>

        </div>
    </div>
</div>
<div>
    <h6>Colmenas Asociadas</h6>
</div>
<div class="row justify-content-evenly mt-3">
    <div style="overflow:auto;">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Numero</th>                    
                </tr>
            </thead>
            <tbody>

                @if (Model.ColmenasTarea != null)
                {
                    foreach (var item in Model.ColmenasTarea)
                    {
                        <tr>
                            <td>
                                @item.idColmena
                            </td>
                            <td>
                                @item.numeroColmena
                            </td>

                        </tr>
                    }
                }                
            </tbody>
        </table>
    </div>

</div>

<div>
    <a class="button" asp-action="TareaColmenas" asp-route-id=@Model.Id>Asociar/Quitar colmenas de la Tarea</a>
</div>