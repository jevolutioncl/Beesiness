@model Tarea
@{
}

<div>
    <h2>Editando Tarea: <strong>@Model.Id</strong> Nombre: <strong>@Model.Nombre</strong></h2>
</div>

<div>
    <form class="row justify-content-evenly" asp-action="TareaEditar" method="post">
        <div class="col-md-6">
            <div class="form-group mt-3">
                <input asp-for="Id" class="form-control" placeholder=@Model.Id readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="Nombre" class="form-control" placeholder=@Model.Nombre />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="Descripcion" class="form-control" placeholder=@Model.Descripcion />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="CorreoAviso" class="form-control" placeholder="Correo para enviar el aviso" />
                <span asp-validation-for="CorreoAviso" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="FechaRegistro" class="form-control" placeholder=@Model.FechaRegistro readonly/>
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="FechaRealizacion" class="form-control" placeholder=@Model.FechaRealizacion />
                <span asp-validation-for="FechaRealizacion" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <select asp-for="Status" class="form-control" id="statusSelect">
                    <option value="Pendiente" id="defaultOption">Pendiente</option>
                    <option value="Realizada">Realizada</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar los Cambios" class="btn btn-outline-success col-12" />
            </div>
        </div>
    </form>
</div>