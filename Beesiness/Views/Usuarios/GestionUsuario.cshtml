@model UserListViewModel

<h2>Usuarios Registrados</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model.Usuarios)
        {
            <tr>
                <td>@usuario.Nombre</td>
                <td>@usuario.Correo</td>
                <td>@usuario.Rol?.Nombre</td>
                <td>
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <a href="@Url.Action("EditUser", "Usuarios", new { id = usuario.Id })"
                           class="btn"
                           style="background: none; border: none; padding: 0;">
                            <i class="fa-solid fa-pen-to-square fa-lg" style="color: #0b5c13;"></i>
                        </a>
                        <form asp-controller="Usuarios"
                              asp-action="DeleteUser"
                              method="post"
                              onsubmit="return confirm('¿Está seguro de querer eliminar este usuario?');"
                              style="margin: 0; padding: 0;">
                            <input type="hidden" name="id" value="@usuario.Id" />
                            <button type="submit"
                                    class="btn"
                                    style="background: none; border: none; padding: 0;">
                                <i class="fa-solid fa-trash fa-lg" style="color: #920a0a;"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
